#include <iostream>
using namespace std;

int main() {
    int rows, cols;
    cout << "Enter rows: ";
    cin >> rows;
    cout << "Enter columns: ";
    cin >> cols;
    for (int r = 0; r < rows; r++) {
        for (int c = 0; c < cols; c++) {
            if ((r + c) % 2 == 0)
                cout << "*";
            else
                cout << " ";
        }
        cout << endl;
    }

    return 0;
}